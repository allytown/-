/* pages/tiaowenline/tiaowenline.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.tiaowencard{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  width: 690rpx;
  height: 134rpx;
  border-radius: 10rpx;
  background:-webkit-linear-gradient(top,#3a7bd5,#00d2ff);
}
.card-text{
  width: 120rpx;
  font-family: pingFang-Medium;
  font-size: 24rpx;
  color: white;
  margin-left: 30rpx;
}
.card-title{
  font-family: pingFang-Medium;
  margin-left: 20rpx;
  width: 340rpx;
  font-size: 24rpx;
  color: white;
}
.card-image{
  margin-left: 16rpx;
  width: 148rpx;
  height: 108rpx;
}
.tip{
  color: #8a8a8a;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}