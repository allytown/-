/* pages/toyindex/toyindex.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.imageBG{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 92vw;
  height: 42vh;
  border-radius: 10rpx;
  margin-top: 2vh;
  background-color: white;
  box-shadow: 0 2px 6px #cccccc;
}
.kuai{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 40.8vw;
  height: 35.2vh;
}
.toyimage{
  width: 38vw;
  height: 33.4vh;
  border: 2px solid #de2910;
}
.button{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 2vh;
  width: 400rpx;
  height: 8vh;
  border-radius: 10rpx;
  background-color: #de2910;
}
.button_text{
  color: white;
  font-size: 36rpx;
  font-family: fangzhengkaiti;
}
.hint{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 92vw;
  height: 42vh;
  border-radius: 10rpx;
  margin-top: 2vh;
  background-color: white;
  box-shadow: 0 2px 6px #cccccc;
}
.hint_title{
  font-size: 36rpx;
  font-family: fangzhengkaiti;
  margin-top: 10rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.art{
  width: 628rpx;
  height: 37vh;
}
.art_text{
  font-size: 32rpx;
  text-align: justify;
  font-family: fangzhengkaiti;
}