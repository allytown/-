/* pages/questionkind/questionkind.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.searchbox{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 88rpx;
  background-color: white;
  border-top: 1px solid #e5e5e5;
}
.search-bg{
  display:flex;
  flex-direction: row;
  align-items: center;
  width: 600rpx;
  height: 76rpx;
  border-radius: 40rpx;
  background-color: #f5f5f5;
}
.search-image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}
.search-input{
  width: 434rpx;
  margin-left: 30rpx;
}
.search-back{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.ontime{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 750rpx;
  height: 88rpx;
  background-color: white;
  margin-top: 10rpx;
  border-bottom: 1px solid #e5e5e5;
}
.ontime-text{
  font-size: 30rpx;
  color: #ce1225;
  margin-left: 74rpx;
}
.searchres{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 750rpx;
  height: 88rpx;
  background-color: white;
  border-bottom: 1px solid #e5e5e5;
}
.searchres-image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
}
.searchres-text{
  width: 638rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #8a8a8a;
  margin-left: 20rpx;
}
.kindsvalue{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  width: 690rpx;
  height: 134rpx;
  border-radius: 10rpx;
  background:-webkit-linear-gradient(top,#ff0844,#ffb199);
}
.kindsvalue-text{
  width: 170rpx;
  font-family: pingFang-Regular;
  font-size: 34rpx;
  color: white;
  margin-left: 30rpx;
}
.kindsvalue-image{
  width: 123rpx;
  height: 118rpx;
  margin-left: 226rpx;
}
.kindsvalue-count{
  font-family: pingFang-Regular;
  color: white;
  font-size: 22rpx;
  margin-left: 12rpx;
}
.tip{
  color: #8a8a8a;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}