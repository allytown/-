/* pages/toy/toy.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color:#f5f5f5;
}
.toycard{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 690rpx;
  height: 134rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  background:-webkit-linear-gradient(top,#3a7bd5,#00d2ff);
}
.eye{
  width: 48rpx;
  height: 36rpx;
  margin-left: 14rpx;
}
.viewtimes{
  width: 46rpx;
  font-size: 24rpx;
  color: white;
  margin-left: 12rpx;
}
.toyname{
  width: 372rpx;
  font-family: pingFang-Medium;
  font-size: 28rpx;
  color: white;
  margin-left: 54rpx;
}
.toy_image{
  width: 112rpx;
  height: 118rpx;
  margin-left: 10rpx;
}
.tip{
  color: #8a8a8a;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}